@model Zmap.Dtos.UserProfileDto

<section style="margin-top: -7px; margin-bottom: -53px;">
    <div class="dashboard">
        <div class="db-left">
            <div class="db-left-1" style="margin-top: 14px; background: url('../../images/users/@Model.ProfilePhotoUrl') no-repeat center center;">
                <h4>@Model.UserName</h4>
            </div>
            <div class="db-left-2">
                <ul>
                    <li>
                        <a href="@Url.Action("UserProfile", "UserProfile", new { id = Model.UserId })"><img src="~/Images/icon/db1.png" alt="" />الكل</a>
                    </li>
                    <li>
                        <a href="@Url.Action("MyBookings", "UserProfile", new { id = Model.UserId })"><img src="~/Images/icon/db2.png" alt="" />حجوزاتى</a>
                    </li>
                    <li>
                        <a href="@Url.Action("MyTrips", "UserProfile", new { id = Model.UserId })"><img src="~/Images/icon/db5.png" alt="" />رحلاتى</a>
                    </li>
                    <li>
                        <a href="@Url.Action("MyProfile", "UserProfile", new { id = Model.UserId })"><img src="~/Images/icon/db7.png" alt="" />ملفى</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="db-cent" style="margin-top: -5px">
            <div class="db-cent-1">
                <p>Hi @Model.FirstName @Model.LastName,</p>
                <h4>Welcome to your dashboard</h4>
            </div>

            <div class="db-profile">
                <img src="~/Images/users/@Model.ProfilePhotoUrl" alt="">
                <h4>@Model.FirstName @Model.LastName</h4>
            </div>
            <div class="db-profile-view">
                <table>
                    <thead>
                        <tr>
                            <th>Age</th>
                            <th>Join Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Age</td>
                            <td>@Model.CreatedDate</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="db-profile-edit">
                @using (Html.BeginForm("EditProfile", "UserProfile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken();
                    <form class="col s12">

                        @Html.HiddenFor(m => m.UserId);
                        
                        <div>
                            <label class="col s4">First Name</label>
                            <div class="input-field col s8">
                                <input type="text" value="@Model.FirstName" name="FirstName" class="validate" required>
                            </div>
                        </div>
                        <div>
                            <label class="col s4">Last Name</label>
                            <div class="input-field col s8">
                                <input type="text" value="@Model.LastName" name="LastName" class="validate" required>
                            </div>
                        </div>
                        <div>
                            <label class="col s4">Email id</label>
                            <div class="input-field col s8">
                                <input type="email" value="@Model.Email" name="Email" class="validate" required>
                            </div>
                        </div>
                        <div>
                            <label class="col s4">Phone</label>
                            <div class="input-field col s8">
                                <input type="number" value="@Model.PhoneNumber" name="PhoneNumber" class="validate" required>
                            </div>
                        </div>
                        <div>
                            <label class="col s4">Date Of Birth</label>
                            <div class="input-field col s8">
                                @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @type = "date", @class = "validate", @required = true })
                            </div>
                        </div>
                        <div>
                            <div class="file-field input-field">
                                <div class="btn" id="pro-file-upload">
                                    <span>File</span>
                                    <input type="file" required name="uploadFile">
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate" type="text" placeholder="Upload profile picture">
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="input-field col s8">
                                <input type="submit" value="Submit" class="waves-effect waves-light pro-sub-btn" id="pro-sub-btn">
                            </div>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</section>

@model Zmap.Models.HotelCustomAdd

@{
    ViewBag.Title = "CreateHotelCustomAdds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="container">
            <div class="row">
                <div>
                    <a href="@Url.Action("HotelCustomAdds", "Hotels", new { id = Model.HotelId })" class="btn-floating btn-large waves-effect waves-light blue">
                        <i class="material-icons">arrow_back</i>
                    </a>
                </div>
                <div class="page-head">
                    <h2>اضافة اضافات للفندق</h2>
                    <div class="head-title">
                        <div class="hl-1"></div>
                        <div class="hl-2"></div>
                        <div class="hl-3"></div>
                    </div>

                    <div class="col-md-12">
                        <div class="head-typo typo-com collap-expand book-form inn-com-form">
                            <h2>بيانات الفندق</h2>

                            <div class="aminities">
                                @using (Html.BeginForm("CreateHotelCustomAdds", "Hotels", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <form class="col l12">
                                        <div class="row">
                                            <div class="input-field col l9">
                                                <input required name="Name" class="form-control" type="text" />
                                            </div>
                                            <div class="input-field col l3">
                                                <label>اسم الاضافة</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col l9">
                                                <input required name="Cost" class="form-control" type="text" />
                                            </div>
                                            <div class="input-field col l3">
                                                <label>تكلفة الاضافة</label>
                                            </div>
                                        </div>

                                        @Html.HiddenFor(m => m.HotelId)

                                        <div class="row">
                                            <div class="input-field col l12">
                                                <input type="submit" value="تسجيل" />
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
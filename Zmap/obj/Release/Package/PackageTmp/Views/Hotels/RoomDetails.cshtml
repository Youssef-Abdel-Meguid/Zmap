@model Zmap.Dtos.RoomDetailsDto
@{
    ViewBag.Title = "RoomDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="page-head">
            <h2>ادارة الغرف</h2>
            <div class="head-title">
                <div class="hl-1"></div>
                <div class="hl-2"></div>
                <div class="hl-3"></div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="hp-amini hp-amini-block db-div-card">
                    <ul>
                        <li class="db-card">
                            <a href="@Url.Action("RoomAvailabilities", "Hotels", new { Id = Model.Id })">
                                <img src="~/Images/icon/roomdate.png" class="db-card-img" />
                                <p>مواعيد الغرفة</p>
                            </a>
                        </li>

                        <li class="db-card">
                            <a href="@Url.Action("AddsOn", "Hotels", new { Id = Model.Id, isHotel = false })">
                                <img src="~/Images/icon/addson.png" class="db-card-img" />
                                <p>مرافق الغرفة</p>
                            </a>
                        </li>

                        <li class="db-card">
                            <a href="@Url.Action("Gallery", "Hotels", new { Id = Model.Id, isHotel = false })">
                                <img src="~/Images/icon/gallery.png" class="db-card-img" />
                                <p>صور الغرفة</p>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>

            
            <div>
                <a href="@Url.Action("Rooms", "Hotels", new { id = Model.HotleId })" class="btn-floating btn-large waves-effect waves-light blue">
                    <i class="material-icons">arrow_back</i>
                </a>
            </div>
        </div>
    </div>
</div>
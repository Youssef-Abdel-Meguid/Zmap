@model Zmap.Dtos.PhotoDetailsDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="container">
            <div class="page-head">
                <h2>ادارة الانشطة</h2>
                <div class="head-title">
                    <div class="hl-1"></div>
                    <div class="hl-2"></div>
                    <div class="hl-3"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a style="margin-bottom: 10px" class="btn-floating btn-large waves-effect waves-light red" href="@Url.Action("CreatePhoto", "Activites", new { id = Model.CompanyId})">
                <i class="material-icons">add</i>
            </a>
            <h2>
                جميع صور الشركة
            </h2>
            <table class="table table-bordered" id="photos">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Photos)
                    {
                        <tr>
                            <td>
                                <div class="col-md-3">
                                    <img width="50" height="50" src="~/images/Activities/@item.PhotoUrl" class="materialboxed" />
                                </div>
                            </td>
                            <td>
                                <div class="col-md-6">
                                    <a onclick="return confirm('هل تريد مسح البيانات')" class="btn-floating waves-effect waves-light-sm purple" href="@Url.Action("DeletePhoto", "Activites", new { id = item.Id })">
                                        <i class="material-icons">
                                            delete
                                        </i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <a href="@Url.Action("Details", "Activites", new { id = Model.CompanyId })" class="btn-floating btn-large waves-effect waves-light blue">
            <i class="material-icons">arrow_back</i>
        </a>
    </div>

</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $('#photos').DataTable();
        });
    </script>
}
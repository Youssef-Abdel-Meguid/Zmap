@model Zmap.Dtos.ServicesDto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="page-head">
            <h2>Services Management</h2>
            <div class="head-title">
                <div class="hl-1"></div>
                <div class="hl-2"></div>
                <div class="hl-3"></div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="head-typo typo-com">
                        <a style="margin-bottom: 10px"
                           class="btn-floating btn-large waves-effect waves-light red"
                           href="@Url.Action("CreateService", "Admin")">
                            <i class="material-icons">add</i>
                        </a>
                        <table class="table table-bordered">
                            <tr>
                                <th>Title</th>
                                <th>Details</th>
                                <th>Photo</th>
                                <th></th>
                            </tr>
                            @foreach (var item in Model.Services)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Details)</td>
                                    <td><img width="50" height="50" src="~/images/Admin/Services/@item.PhotoUrl" /></td>
                                    <td>
                                        <a onclick="return confirm('هل تريد مسح البيانات')" class="btn-floating waves-effect waves-light-sm purple" href="@Url.Action("DeleteService", "Admin", new { id = item.Id })">
                                            <i class="material-icons">
                                                delete
                                            </i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>


            <div>
                <a href="@Url.Action("Index", "Admin")" class="btn-floating btn-large waves-effect waves-light blue">
                    <i class="material-icons">arrow_back</i>
                </a>
            </div>
        </div>
    </div>

</div>

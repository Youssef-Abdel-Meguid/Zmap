@model Zmap.Dtos.BlogCreateDto
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="inn-body-section pad-bot-50">
    <div class="container">
        <div class="row inn-page-com">
            <div class="page-head">
                <h2>اضافة بوست جديد</h2>
                <div class="head-title">
                    <div class="hl-1"></div>
                    <div class="hl-2"></div>
                    <div class="hl-3"></div>
                </div>
            </div>
            @using (Html.BeginForm("Create", "Blogs", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-8">

                    <div class="row inn-services in-blog">
                        <div class="col-lg-8" style="left: 135px; top:16px;">
                            <div class="input-field">

                                <label for="Title" style="top: -31px; left: 420px;">العنوان</label>
                                <input type="text" name="Title" required class="form-control" />

                                <label style="top: 54px; left: 419px;" for="Details">التفاصيل</label>
                                <textarea rows="20" cols="20" name="Details" required class="form-control" style="margin-top: 51px;"></textarea>

                                <label for="uploadFile" style="top: 517px; left: 391px;">صورة للبوست</label>
                                <input type="file" name="uploadFile" class="validate" required  style="margin-top: 20px; margin-right: 176px;"/>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="col-md-4">

                    <div class="head-typo typo-com rec-post">
                        <h3>اختار نوع البوست</h3>
                        <ul>
                            @for (int i = 0; i < Model.Categories.CategorList.Count; i++)
                            {
                                <li>
                                    <div class="rec-po-title">
                                        @Html.CheckBoxFor(m => Model.Categories.CategorList[i].IsChecked, new { Style = "left: 28px; opacity: 1; top: -1px" })
                                        @Model.Categories.CategorList[i].Name
                                        @Html.HiddenFor(m => Model.Categories.CategorList[i].Id)
                                        @Html.HiddenFor(m => Model.Categories.CategorList[i].Name)
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <input type="submit" value="اضافة" class="btn btn-success btn-lg" style="margin-top: 26px; margin-right: 692px;"/>
            }
        </div>
    </div>
</div>


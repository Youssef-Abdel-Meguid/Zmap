@model Zmap.Models.Bus

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="container">
            <div class="row">
                <div>
                    <a href="@Url.Action("Buses", "Transportation", new { id = Model.CompanyId })" class="btn-floating btn-large waves-effect waves-light blue">
                        <i class="material-icons">arrow_back</i>
                    </a>
                </div>
                <div class="page-head">
                    <h2>اضافة اتوبيس جديد</h2>
                    <div class="head-title">
                        <div class="hl-1"></div>
                        <div class="hl-2"></div>
                        <div class="hl-3"></div>
                    </div>

                    <div class="col-md-12">
                        <div class="head-typo typo-com collap-expand book-form inn-com-form">
                            <h2>بيانات الاتوبيس</h2>

                            <div class="aminities">
                                @using (Html.BeginForm("CreateBus", "Transportation", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <form class="col l12">
                                        <div class="row">
                                            <div class="input-field col l9">
                                                @*@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @data_val = "true", @required = "required" } })*@
                                                <input required type="text" class="form-control" name="Name"/>
                                            </div>
                                            <div class="input-field col l3">
                                                <label>اسم الاتوبيس</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col l9">
                                                @*@Html.EditorFor(model => model.BusNumber, new { htmlAttributes = new { @class = "form-control", @data_val = "true", @required = "required" } })*@
                                                <input required type="text" class="form-control" name="BusNumber" />
                                            </div>
                                            <div class="input-field col l3">
                                                <label>رقم الاتوبيس</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col l9">
                                                @Html.DropDownList("CategoryId", new SelectList(ViewBag.BusCategory, "Id", "CategoryName"), "", new { @class = "validate", @data_val = "true", @required = "required" })
                                            </div>
                                            <div class="input-field col l3">
                                                <label>النوع</label>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="input-field col l9">
                                                @Html.DropDownList("SeatsMapId", new SelectList(ViewBag.SeatMap, "Id", "MapName"), "", new { @class = "validate", @data_val = "true", @required = "required" })
                                            </div>
                                            <div class="input-field col l3">
                                                <label>خريطة المقاعد</label>
                                            </div>
                                        </div>

                                        @Html.HiddenFor(m => m.CompanyId)
                                        <div class="row">
                                            <div class="input-field col l12">
                                                <input type="submit" value="تسجيل" />
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
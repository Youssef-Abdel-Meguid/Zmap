@model IEnumerable<Zmap.Dtos.UserDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="container">
            <div class="page-head">
                <h2>ادارة المستخدمين</h2>
                <div class="head-title">
                    <div class="hl-1"></div>
                    <div class="hl-2"></div>
                    <div class="hl-3"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a style="margin-bottom: 10px" class="btn-floating btn-large waves-effect waves-light red" href="@Url.Action("Create", "Users")">
                <i class="material-icons">add</i>
            </a>
            <h2>
                جميع المستخدمين
            </h2>
            <table class="table table-bordered">
                <tr>
                    <th>
                        الاسم الاول
                    </th>
                    <th>
                        الاسم التانى
                    </th>
                    <th>
                        اسم المستخدم
                    </th>
                    <th>
                        البريد الالكترونى
                    </th>
                    <th>
                        رقم التليفون
                    </th>
                    <th>
                        نوع المستخدم
                    </th>
                    <th>
                        تاريخ الاضافة
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Users", new { id = item.Id })" class="btn-floating waves-effect waves-light orange">
                                <i class="material-icons">
                                    edit
                                </i>
                            </a>
                            <a onclick="return confirm('هل تريد مسح البيانات')" href="@Url.Action("Delete", "Users", new { id = item.Id })" class="btn-floating waves-effect waves-light-sm purple">
                                <i class="material-icons">
                                    delete
                                </i>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

</div>
@model Zmap.Models.Activity

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="container">
            <div class="row">
                <div>
                    <a href="@Url.Action("Activities", "Activites", new { id = Model.CompanyId })" class="btn-floating btn-large waves-effect waves-light blue">
                        <i class="material-icons">arrow_back</i>
                    </a>
                </div>
                <div class="page-head">
                    <h2>اضافة نشاط جديد</h2>
                    <div class="head-title">
                        <div class="hl-1"></div>
                        <div class="hl-2"></div>
                        <div class="hl-3"></div>
                    </div>

                    <div class="col-md-12">
                        <div class="head-typo book-form inn-com-form">
                            <h2>بيانات النشاط</h2>

                            <div class="">
                                @using (Html.BeginForm("CreateActivityCity", "Activites", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <form class="col l12">

                                        <div class="row">
                                            <div class="input-field col l9">
                                                @Html.DropDownList("CityID", new SelectList(ViewBag.Cities, "Id", "ArabicCityName"), "", new { @class = "", @data_val = "true", @required = "required" })
                                            </div>
                                            <div class="input-field col l3">
                                                <label>مكان النشاط</label>
                                            </div>
                                        </div>

                                        @Html.HiddenFor(m => m.CompanyId)
                                        <div class="row">
                                            <div class="input-field col l12">
                                                <input type="submit" value="تسجيل" />
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@model Zmap.Models.Room

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="container">
            <div class="row">
                <div>
                    <a href="@Url.Action("Rooms", "Hotels", new { id = Model.HotleId })" class="btn-floating btn-large waves-effect waves-light blue">
                        <i class="material-icons">arrow_back</i>
                    </a>
                </div>
                <div class="page-head">
                    <h2>اضافة غرفة جديدة</h2>
                    <div class="head-title">
                        <div class="hl-1"></div>
                        <div class="hl-2"></div>
                        <div class="hl-3"></div>
                    </div>

                    <div class="col-md-12">
                        <div class="head-typo typo-com collap-expand book-form inn-com-form">
                            <h2>بيانات الغرفة</h2>

                            <div class="aminities">
                                @using (Html.BeginForm("CreateRoom", "Hotels", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <form class="col l12">
                                        @Html.HiddenFor(m => Model.HotleId)

                                        <div class="row">
                                            <div class="input-field col l9">
                                                @Html.DropDownList("RoomViewId", new SelectList(ViewBag.RoomViews, "Id", "ArabicName"), new { @class = "validate", @data_val = "true", @required = "required" })
                                            </div>
                                            <div class="input-field col l3">
                                                <label>فيو الغرفة</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col l9">
                                                <input name="NumberOfRooms" required type="text" class="validate" />
                                            </div>
                                            <div class="input-field col l3">
                                                <label>عدد الغرف المتاخة</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col l9">
                                                <textarea class="form-control" required name="Description"></textarea>
                                            </div>
                                            <div class="input-field col l3">
                                                <label>وصف الغرفة</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col l12">
                                                <input type="submit" value="تسجيل" />
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
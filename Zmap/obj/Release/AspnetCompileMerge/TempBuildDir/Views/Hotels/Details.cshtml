@model Zmap.Dtos.HotelDetailsDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="inn-body-section pad-bot-55">
        <div class="page-head">
            <h2>ادارة فندق @Model.Name</h2>
            <div class="head-title">
                <div class="hl-1"></div>
                <div class="hl-2"></div>
                <div class="hl-3"></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="hp-amini hp-amini-block db-div-card">
                    <ul>
                        @if (Model.IsConfirmed == true)
                        {
                            <li class="db-card">
                                <a href="@Url.Action("Rooms", "Hotels", new { Id = Model.Id })">
                                    <img src="~/Images/icon/room.png" class="db-card-img" />
                                    <p>غرف الفندق</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("AddsOn", "Hotels", new { Id = Model.Id })">
                                    <img src="~/Images/icon/addson.png" class="db-card-img" />
                                    <p>مرافق الفندق</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("ChildPolicy", "Hotels", new { Id = Model.Id })">
                                    <img src="~/Images/icon/child.png" class="db-card-img" />
                                    <p>سياسة الاطفال</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("Gallery", "Hotels", new { Id = Model.Id })">
                                    <img src="~/Images/icon/gallery.png" class="db-card-img" />
                                    <p>صور الفندق</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("Files", "Hotels", new { Id = Model.Id })">
                                    <img src="~/Images/icon/folder.png" class="db-card-img" />
                                    <p>ملفات الفندق</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("Contacts", "Hotels", new { Id = Model.Id })">
                                    <img src="~/Images/icon/phone.png" class="db-card-img" />
                                    <p>ارقام الفندق</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("FAQs", "Hotels", new { Id = Model.Id })">
                                    <img src="~/Images/icon/faq.png" class="db-card-img" />
                                    <p>اسئلة متكررة</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="db-card">
                                <a href="@Url.Action("Files", "Hotels", new { Id = Model.Id })">
                                    <img src="~/Images/icon/folder.png" class="db-card-img" />
                                    <p>ملفات الفندق</p>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            
            <div>
                <a href="@Url.Action("Index", "Hotels")" class="btn-floating btn-large waves-effect waves-light blue">
                    <i class="material-icons">arrow_back</i>
                </a>
            </div>
        </div>
    </div>

</div>
@model Zmap.Models.ChildPolicy

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="container">
            <div class="row">
                <div>
                    <a href="@Url.Action("Details", "Hotels", new { id = Model.HotelId })" class="btn-floating btn-large waves-effect waves-light blue">
                        <i class="material-icons">arrow_back</i>
                    </a>
                </div>
                <div class="page-head">
                    <h2>اضافة سياسة اطفال جديدة</h2>
                    <div class="head-title">
                        <div class="hl-1"></div>
                        <div class="hl-2"></div>
                        <div class="hl-3"></div>
                    </div>

                    <div class="col-md-12">
                        <div class="head-typo typo-com collap-expand book-form inn-com-form">
                            <h2>بيانات السياسة</h2>

                            <div class="aminities">
                                @using (Html.BeginForm("CreateChildPolicy", "Hotels", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <form class="col l12">
                                        <div class="row">
                                            <div class="input-field col l9">
                                                <input type="text" name="AgeFrom" required class="validate" />
                                            </div>
                                            <div class="input-field col l3">
                                                <label>السن من</label>
                                            </div>
                                        </div>

                                         <div class="row">
                                            <div class="input-field col l9">
                                                <input type="text" name="AgeTo" required class="validate" />
                                            </div>
                                            <div class="input-field col l3">
                                                <label>السن الى</label>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col l9">
                                                @Html.DropDownList("ChildAccommodationPercentageId", new SelectList(ViewBag.AccoPercentage, "Id", "AccommodationPercentage"), new { @data_val = "true", @required = "required" })
                                            </div>
                                            <div class="input-field col l3">
                                                <label>نسبة الاقامة</label>
                                            </div>
                                        </div>
                                        @Html.HiddenFor(m => m.HotelId)
                                        <div class="row">
                                            <div class="input-field col l12">
                                                <input type="submit" value="تسجيل" />
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

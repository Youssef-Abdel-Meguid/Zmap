@model Zmap.Dtos.TransportationDetailsDto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="inn-body-section pad-bot-55">
        <div class="page-head">
            <h2>ادارة @Model.Name</h2>
            <div class="head-title">
                <div class="hl-1"></div>
                <div class="hl-2"></div>
                <div class="hl-3"></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="hp-amini hp-amini-block db-div-card">
                    <ul>
                        @if (Model.IsConfirmed == true)
                        {
                            <li class="db-card">
                                <a href="@Url.Action("Buses", "Transportation", new { Id = Model.Id })">
                                    <img src="~/Images/icon/bus.png" class="db-card-img" />
                                    <p>اتوبيسات الشركة</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("Stations", "Transportation", new { Id = Model.Id })">
                                    <img src="~/Images/icon/station.png" class="db-card-img" />
                                    <p>محطات الشركة</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("Lines", "Transportation", new { Id = Model.Id })">
                                    <img src="~/Images/icon/line.png" class="db-card-img" />
                                    <p>خطوط الشركة</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("Gallery", "Transportation", new { Id = Model.Id })">
                                    <img src="~/Images/icon/gallery.png" class="db-card-img" />
                                    <p>صور الشركة</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("Files", "Transportation", new { Id = Model.Id })">
                                    <img src="~/Images/icon/folder.png" class="db-card-img" />
                                    <p>ملفات الشركة</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("Contacts", "Transportation", new { Id = Model.Id })">
                                    <img src="~/Images/icon/phone.png" class="db-card-img" />
                                    <p>ارقام الشركة</p>
                                </a>
                            </li>

                            <li class="db-card">
                                <a href="@Url.Action("FAQs", "Transportation", new { Id = Model.Id })">
                                    <img src="~/Images/icon/faq.png" class="db-card-img" />
                                    <p>اسئلة متكررة</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="db-card">
                                <a href="@Url.Action("Files", "Transportation", new { Id = Model.Id })">
                                    <img src="~/Images/icon/folder.png" class="db-card-img" />
                                    <p>ملفات الشركة</p>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <a href="@Url.Action("Index", "Transportation")" class="btn-floating btn-large waves-effect waves-light blue">
                <i class="material-icons">arrow_back</i>
            </a>
        </div>
    </div>

</div>
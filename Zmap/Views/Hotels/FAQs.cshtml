@model Zmap.Dtos.FAQDetailsDto
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="container">
            <div class="page-head">
                <h2>ادارة الفنادق</h2>
                <div class="head-title">
                    <div class="hl-1"></div>
                    <div class="hl-2"></div>
                    <div class="hl-3"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a style="margin-bottom: 10px" class="btn-floating btn-large waves-effect waves-light red" href="@Url.Action("CreateFAQ", "Hotels", new { id = Model.HotelId})">
                <i class="material-icons">add</i>
            </a>
            <h2>
                جميع الاسئلة المتكررة
            </h2>
            <table class="table table-bordered" id="faq">
                <thead>
                    <tr>
                        <th>السؤال</th>
                        <th>الاجابة</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FAQs)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Question)</td>
                            <td style="word-break: break-all;">@Html.DisplayFor(modelItem => item.Answer)</td>
                            <td>
                                <a onclick="return confirm('هل تريد مسح البيانات')" class="btn-floating waves-effect waves-light-sm purple" href="@Url.Action("DeleteFAQ", "Hotels", new { id = item.Id })">
                                    <i class="material-icons">
                                        delete
                                    </i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <a href="@Url.Action("Details", "Hotels", new { id = Model.HotelId })" class="btn-floating btn-large waves-effect waves-light blue">
            <i class="material-icons">arrow_back</i>
        </a>
    </div>

</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $('#faq').DataTable();
        });
    </script>
}
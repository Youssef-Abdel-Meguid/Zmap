@model Zmap.Models.Activity

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="page-head">
            <h2>@Model.ActivityName</h2>
            <div class="head-title">
                <div class="hl-1"></div>
                <div class="hl-2"></div>
                <div class="hl-3"></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="hp-amini hp-amini-block db-div-card">
                    <ul>
                        <li class="db-card">
                            <a href="@Url.Action("ActivityAvailabilities", "Activites", new { Id = Model.Id })">
                                <img src="~/Images/icon/roomdate.png" class="db-card-img" />
                                <p>مواعيد النشاط</p>
                            </a>
                        </li>

                        <li class="db-card">
                            <a href="@Url.Action("LockedDates", "Activites", new { Id = Model.Id })">
                                <img src="~/Images/icon/lock.png" class="db-card-img" />
                                <p>المواعيد المغلقة</p>
                            </a>
                        </li>

                        <li class="db-card">
                            <a href="@Url.Action("ActivityGallery", "Activites", new { Id = Model.Id })">
                                <img src="~/Images/icon/gallery.png" class="db-card-img" />
                                <p>صور النشاط</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div>
                <a href="@Url.Action("Activities", "Activites", new { id = Model.CompanyId})" class="btn-floating btn-large waves-effect waves-light blue">
                    <i class="material-icons">arrow_back</i>
                </a>
            </div>
        </div>
    </div>

</div>

@model Zmap.Dtos.ActivityCompanyDto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="page-head">
            <h2>ادارة @Model.Name</h2>
            <div class="head-title">
                <div class="hl-1"></div>
                <div class="hl-2"></div>
                <div class="hl-3"></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="head-typo typo-com">
                <div class="room">
                    <div class="col-md-6 portfolio-wrapper">
                        @if (Model.Photos.Count > 0)
                        {
                            <img src="~/images/Activities/@Model.Photos[0].PhotoUrl" />
                        }
                    </div>
                    <div class="col-md-6">
                        <div dir="rtl">
                            <hr />
                            <ul>
                                <li><label>اسم الشركة: @Html.DisplayFor(model => model.Name)</label></li>
                                <li><label>عن الشركة: @Html.DisplayFor(model => model.About)</label></li>
                                <li><label>سياسة الخصوصية: @Html.DisplayFor(model => model.PrivacyPolicy)</label></li>
                                <li><label>تاريخ الاضافة : @Html.DisplayFor(model => model.CreatedDate)</label></li>
                                <li><label>البريد الالكترونى للمسؤول: @Html.DisplayFor(model => model.ManagerEmail)</label></li>
                                <li><label>رقم تليفون المسؤول: @Html.DisplayFor(model => model.ManagerPhonenumber)</label></li>
                                @if (Model.IsConfirmed == true)
                                {
                                    <li><label>موافقة الادمن: تمت الموافقة</label></li>
                                }
                                else
                                {
                                    <li><label>موافقة الادمن: لا يوجد موافقة</label></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="head-typo typo-com collap-expand">
                    <h2>ادارة موارد الشركة</h2>
                    <p>اضافة, تعديل, حذف موارد ,و معلومات الشركة</p>
                    <ul class="collapsible" data-collapsible="accordion">

                        <li>
                            <div class="collapsible-header"><i class="material-icons"></i>الملفات المطلوبة</div>
                            <div class="collapsible-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="head-typo typo-com">
                                            <a style="margin-bottom: 10px"
                                               class="btn-floating btn-large waves-effect waves-light red"
                                               href="@Url.Action("CreateAttachment", "Activites", new { Id = Model.Id })">
                                                <i class="material-icons">add</i>
                                            </a>
                                            <table class="table table-bordered">
                                                <tr>
                                                    <th>اسم الملف</th>
                                                    <th></th>
                                                </tr>
                                                @foreach (var item in Model.Attachments)
                                                {
                                                    <tr>
                                                        <td>
                                                            <a href="@Url.Action("DownloadAttachment", "Activites", new { filePath = item.SavedFileName})">@Html.DisplayFor(modelItem => item.FileName)</a>
                                                        </td>
                                                        <td>
                                                            <a onclick="return confirm('هل تريد مسح البيانات')" class="btn-floating waves-effect waves-light-sm purple" href="@Url.Action("DeleteAttachment", "Activites", new { id = item.Id })">
                                                                <i class="material-icons">
                                                                    delete
                                                                </i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>


                        @if (Model.IsConfirmed == true)
                        {
                            <li>
                                <div class="collapsible-header"><i class="material-icons"></i>ارقام الشركة</div>
                                <div class="collapsible-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="head-typo typo-com">
                                                <a style="margin-bottom: 10px"
                                                   class="btn-floating btn-large waves-effect waves-light red"
                                                   href="@Url.Action("CreateContact", "Activites", new { Id = Model.Id })">
                                                    <i class="material-icons">add</i>
                                                </a>
                                                <table class="table table-bordered">
                                                    <tr>
                                                        <th>رقم التليفون</th>
                                                        <th></th>
                                                    </tr>
                                                    @foreach (var item in Model.Contacts)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                                                            </td>
                                                            <td>
                                                                <a onclick="return confirm('هل تريد مسح البيانات')" class="btn-floating waves-effect waves-light-sm purple" href="@Url.Action("DeleteContact", "Activites", new { id = item.Id })">
                                                                    <i class="material-icons">
                                                                        delete
                                                                    </i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="collapsible-header"><i class="material-icons"></i>صور الشركة</div>
                                <div class="collapsible-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="head-typo typo-com">
                                                <a style="margin-bottom: 10px"
                                                   class="btn-floating btn-large waves-effect waves-light red"
                                                   href="@Url.Action("CreatePhoto", "Activites", new { Id = Model.Id })">
                                                    <i class="material-icons">add</i>
                                                </a>
                                                <table class="table table-bordered">
                                                    @foreach (var item in Model.Photos)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <img width="50" height="50" src="~/images/Activities/@item.PhotoUrl" />
                                                            </td>
                                                            <td>
                                                                <a onclick="return confirm('هل تريد مسح البيانات')" class="btn-floating waves-effect waves-light-sm purple" href="@Url.Action("DeletePhoto", "Activites", new { id = item.Id })">
                                                                    <i class="material-icons">
                                                                        delete
                                                                    </i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="collapsible-header"><i class="material-icons"></i>الاسئلة المتكررة</div>
                                <div class="collapsible-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="head-typo typo-com">
                                                <a style="margin-bottom: 10px"
                                                   class="btn-floating btn-large waves-effect waves-light red"
                                                   href="@Url.Action("CreateFAQ", "Activites", new { Id = Model.Id })">
                                                    <i class="material-icons">add</i>
                                                </a>
                                                <table class="table table-bordered">
                                                    <tr>
                                                        <th>السؤال</th>
                                                        <th>الاجابة</th>
                                                        <th></th>
                                                    </tr>
                                                    @foreach (var item in Model.FAQs)
                                                    {
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelItem => item.Question)</td>
                                                            <td style="word-break: break-all;">@Html.DisplayFor(modelItem => item.Answer)</td>
                                                            <td>
                                                                <a onclick="return confirm('هل تريد مسح البيانات')" class="btn-floating waves-effect waves-light-sm purple" href="@Url.Action("DeleteFAQ", "Activites", new { id = item.Id })">
                                                                    <i class="material-icons">
                                                                        delete
                                                                    </i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="collapsible-header"><i class="material-icons"></i>انشطة الشركة</div>
                                <div class="collapsible-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="head-typo typo-com">
                                                <a style="margin-bottom: 10px"
                                                   class="btn-floating btn-large waves-effect waves-light red"
                                                   href="@Url.Action("CreateActivity", "Activites", new { Id = Model.Id })">
                                                    <i class="material-icons">add</i>
                                                </a>
                                                <table class="table table-bordered">
                                                    <tr>
                                                        <th>اسم النشاط</th>
                                                        <th>نوع النشاط</th>
                                                        <th>مكان النشاط</th>
                                                        <th>المدينة</th>
                                                        <th>السعر بالانتقالات</th>
                                                        <th>السعر بدون الانتقالات</th>
                                                        <th>تاريخ الاضافة</th>
                                                        <th></th>
                                                    </tr>
                                                    @foreach (var item in Model.Activities)
                                                    {
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelItem => item.ActicityName)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.ActivityCategory)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.SubArea)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.City)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.CostWithTrans)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.CostWithoutTrans)</td>
                                                            <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                                                            <td>
                                                                <a href="@Url.Action("EditActivity", "Activites", new { id = item.Id })" class="btn-floating waves-effect waves-light orange">
                                                                    <i class="material-icons">
                                                                        edit
                                                                    </i>
                                                                </a>
                                                                <a onclick="return confirm('هل تريد مسح البيانات')" href="@Url.Action("DeleteActivity", "Activites", new { id = item.Id })" class="btn-floating waves-effect waves-light-sm purple">
                                                                    <i class="material-icons">
                                                                        delete
                                                                    </i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div>
                <a href="@Url.Action("Index", "Activites")" class="btn-floating btn-large waves-effect waves-light blue">
                    <i class="material-icons">arrow_back</i>
                </a>
            </div>
        </div>
    </div>

</div>
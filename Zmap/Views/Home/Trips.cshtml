@model IEnumerable<Zmap.Dtos.UserHomeTripDto>
@{
    ViewBag.Title = "Blogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="inn-body-section pad-bot-50">
    <div class="container">
        <div class="row inn-page-com">
            <div class="page-head">
                <h2>رحلات المابرز</h2>
                <div class="head-title">
                    <div class="hl-1"></div>
                    <div class="hl-2"></div>
                    <div class="hl-3"></div>
                </div>
            </div>
            <!--SERVICES SECTION-->
            <div class="col-md-12">
                @foreach (var item in Model)
                {
                    <div class="row inn-services in-blog">
                        <div class="col-md-4"> <img src="~/Images/UserTrips/@item.Photo" alt="" /> </div>
                        <div class="col-md-8">
                            <h3>@item.Title</h3> <span class="blog-author">بواسطة: @item.CreatedBy</span>
                            <p>@item.Description</p> <a href="@Url.Action("TripDetails", "Home", new { id = item.UserTripId})" class="waves-effect waves-light inn-re-mo-btn">قرأة المزيد</a>
                        </div>
                    </div>
                }
            </div>

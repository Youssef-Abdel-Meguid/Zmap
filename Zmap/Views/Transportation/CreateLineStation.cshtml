@model Zmap.Models.LineStation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="inn-body-section pad-bot-55">
        <div class="container">
            <div class="row">
                <div>
                    <a href="@Url.Action("LineDetails", "Transportation", new { id = Model.LineId })" class="btn-floating btn-large waves-effect waves-light blue">
                        <i class="material-icons">arrow_back</i>
                    </a>
                </div>

                <div class="page-head">
                    <h2>اضافة محطة للخط</h2>
                    <div class="head-title">
                        <div class="hl-1"></div>
                        <div class="hl-2"></div>
                        <div class="hl-3"></div>
                    </div>

                    <div class="col-md-12">
                        <div class="head-typo typo-com collap-expand book-form inn-com-form">
                            <h2>بيانات الخط</h2>

                            <div class="aminities">
                                @using (Html.BeginForm("CreateLineStation", "Transportation", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <form class="col l12">
                                        <div class="row">
                                            <div class="input-field col l9">
                                                @Html.EditorFor(model => model.StoppinByOrder, new { htmlAttributes = new { @class = "validate", @data_val = "true", @required = "required" } })
                                            </div>
                                            <div class="input-field col l3">
                                                <label>الترتيب</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col l9">
                                                @Html.DropDownList("StationId", new SelectList(ViewBag.Stations, "Id", "Name"), "", new { @class = "validate", @data_val = "true", @required = "required" })
                                            </div>
                                            <div class="input-field col l3">
                                                <label>المحطة</label>
                                            </div>
                                        </div>

                                        @Html.HiddenFor(m => m.LineId)
                                        <div class="row">
                                            <div class="input-field col l12">
                                                <input type="submit" value="تسجيل" />
                                            </div>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>


</div>